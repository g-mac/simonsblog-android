<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/list_item_article_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/fragment_margin"
    android:paddingRight="@dimen/fragment_margin"
    android:paddingTop="@dimen/fragment_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryBright"
        android:orientation="vertical"
        android:padding="@dimen/component_vertical_margin_double">

        <TextView
            android:id="@+id/list_item_article_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_small"
            tools:text="Date 00, 0000" />

        <TextView
            android:id="@+id/list_item_article_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimaryVeryDark"
            android:textSize="@dimen/text_size_medium"
            tools:text="Title of this article" />

        <TextView
            android:id="@+id/list_item_article_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="3"
            android:textSize="@dimen/text_size_normal"
            tools:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley." />

        <TextView
            android:id="@+id/list_item_article_comments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3 Comments"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/text_size_small" />

    </LinearLayout>

    <Space
        android:id="@+id/list_item_bottom_space"
        android:layout_width="match_parent"
        android:layout_height="@dimen/fragment_margin"
        android:visibility="gone" />

</LinearLayout>
