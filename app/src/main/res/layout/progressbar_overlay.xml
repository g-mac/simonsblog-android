<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/progressbar_fullscreen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/greyTransparent"
    android:clickable="true"
    android:gravity="center"
    android:orientation="vertical"
    android:visibility="gone"
    tools:visibility="visible">

    <ProgressBar
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:indeterminateDrawable="@drawable/progressbar_background" />

    <TextView
        android:id="@+id/progressbar_fullscreen_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/fragment_margin"
        android:textColor="@color/colorAccentBright"
        android:textSize="@dimen/text_size_medium" />

</LinearLayout>
